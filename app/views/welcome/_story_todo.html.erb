<div class="w-full flex bg-gray-200 border-b border-b-gray-400 border-t border-t-gray-100">
  <div class="w-1/6 p-1 text-xs">
    <%= story.changed_at.strftime('%b-%d') %><br />
    <%= story.changed_at.strftime('%H:%M') %>
  </div>
  <div class="w-5/6 p-1 text-xs leading-tight">
    <div class="float-right mt-1 ml-1 inline-flex">
      <a href="#" class="inline-block text-xs px-2 py-1 leading-none rounded text-white bg-gray-600 hover:bg-gray-500">Start</a>
    </div>
    <%= story.clean_summary %>
    <%= render 'labels', story: story %>
  </div>
</div>