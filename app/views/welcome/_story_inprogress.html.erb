<div class="w-full flex bg-yellow-200 border-b border-b-yellow-400 border-t border-t-yellow-100">
  <div class="w-1/6 p-1 text-xs">
    <%= story.changed_at.strftime('%b-%d') %><br />
    <%= story.changed_at.strftime('%H:%M') %>
  </div>
  <div class="w-5/6 p-1 text-xs leading-tight">
    <div class="float-right mt-1 ml-1 inline-flex">
      <a href="#" class="inline-block text-xs mr-1 px-2 py-1 leading-none rounded text-white bg-green-800 hover:bg-green-600">Accept</a>
      <a href="#" class="inline-block text-xs px-2 py-1 leading-none rounded text-white bg-red-800 hover:bg-red-600">Reject</a>
    </div>
    <%= story.clean_summary %>
    <%= render 'labels', story: story %>
  </div>
</div>