<div class="p-0">
  <a href="<%= "%s/browse/%s" % [ENV['JIRA_HOST'], story.key] %>" target="_blank" class="inline-block rounded bg-teal-500 p-px m-0 text-3xs leading-none text-white font-bold" data-field="story_key"><%= story.key %></a>
<% if story.epic_link %>
  <a href="<%= "%s/browse/%s" % [ENV['JIRA_HOST'], story.epic_link] %>" target="_blank" class="inline-block rounded bg-indigo-500 p-px m-0 text-3xs leading-none text-white font-bold" data-field="story_tag"><%= story.epic ? story.epic.clean_title : epic_link %></a>
<% end %>
<% story.labels.each_with_index do |label, index| %>
  <a href="#" class="inline-block rounded border-purple-500 border p-px m-0 text-3xs leading-none text-purple-700 font-bold" data-field="story_tag"><%= label %></a>
<% end %>
<% story.tags.each_with_index do |tag, index| %>
  <a href="#" class="inline-block rounded border-green-500 border p-px m-0 text-3xs leading-none text-green-700 font-bold" data-field="story_tag"><%= tag %></a>
<% end %>
</div>